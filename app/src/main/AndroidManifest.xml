<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ocs.ccell">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_adaptive_fore"
        android:label="C-Cell"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.ocs.ccell.LoginScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ocs.ccell.MainScreen"
            android:exported="true"
         ></activity>
        <activity
            android:name="com.ocs.ccell.RegisterScreen"
            android:exported="true"
            ></activity>
        <activity
            android:name="com.ocs.ccell.ForgotPasswordScreen"
            android:exported="true"
            ></activity>
    </application>

</manifest>